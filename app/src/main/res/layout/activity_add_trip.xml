<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background_gradient"
    android:fillViewport="true"
    tools:context=".ui.trips.AddTripActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <!-- Header -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:paddingStart="8dp"
            android:paddingTop="48dp"
            android:paddingEnd="20dp">

            <ImageButton
                android:id="@+id/buttonBack"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:background="?attr/selectableItemBackgroundBorderless"
                android:contentDescription="Wstecz"
                android:src="@drawable/ic_arrow_back"
                app:tint="@color/text_primary" />

            <TextView
                android:id="@+id/textViewHeader"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:layout_weight="1"
                android:text="Nowa podróż"
                android:textColor="@color/text_primary"
                android:textSize="24sp"
                android:textStyle="bold" />

        </LinearLayout>

        <!-- Formularz -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingStart="20dp"
            android:paddingTop="24dp"
            android:paddingEnd="20dp"
            android:paddingBottom="32dp">

            <!-- Tytuł -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Nazwa podróży"
                android:textColor="@color/text_secondary"
                android:textSize="13sp" />

            <EditText
                android:id="@+id/editTextTitle"
                android:layout_width="match_parent"
                android:layout_height="52dp"
                android:layout_marginTop="8dp"
                android:background="@drawable/background_input_dark"
                android:hint="np. Wakacje w Grecji"
                android:inputType="text"
                android:paddingStart="16dp"
                android:paddingEnd="16dp"
                android:textColor="@color/text_primary"
                android:textColorHint="@color/text_hint"
                android:textSize="16sp" />

            <!-- Opis -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:text="Opis"
                android:textColor="@color/text_secondary"
                android:textSize="13sp" />

            <EditText
                android:id="@+id/editTextDescription"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:background="@drawable/background_input_dark"
                android:gravity="top"
                android:hint="Opisz swoją podróż..."
                android:inputType="textMultiLine"
                android:minHeight="100dp"
                android:padding="16dp"
                android:textColor="@color/text_primary"
                android:textColorHint="@color/text_hint"
                android:textSize="16sp" />

            <!-- Zdjęcia -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:text="Zdjęcia"
                android:textColor="@color/text_secondary"
                android:textSize="13sp" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/buttonSelectImage"
                style="@style/Widget.Material3.Button.OutlinedButton"
                android:layout_width="match_parent"
                android:layout_height="52dp"
                android:layout_marginTop="8dp"
                android:text="+ Dodaj zdjęcia"
                android:textAllCaps="false"
                android:textColor="@color/text_secondary"
                app:cornerRadius="12dp"
                app:icon="@android:drawable/ic_menu_gallery"
                app:iconGravity="textStart"
                app:iconTint="@color/text_secondary"
                app:strokeColor="@color/divider_dark"
                app:strokeWidth="1dp" />

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/recyclerViewSelectedImages"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="12dp"
                android:clipToPadding="false"
                android:orientation="horizontal" />

            <!-- Cel podróży -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:text="Cel podróży"
                android:textColor="@color/text_secondary"
                android:textSize="13sp" />

            <LinearLayout
                android:id="@+id/layoutSelectLocation"
                android:layout_width="match_parent"
                android:layout_height="56dp"
                android:layout_marginTop="8dp"
                android:background="@drawable/background_input_dark"
                android:clickable="true"
                android:focusable="true"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:paddingStart="16dp"
                android:paddingEnd="16dp">

                <ImageView
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:src="@drawable/ic_location_pin"
                    app:tint="@color/text_hint" />

                <TextView
                    android:id="@+id/textViewLocationHint"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="12dp"
                    android:layout_weight="1"
                    android:text="Dokąd chcesz jechać?"
                    android:textColor="@color/text_hint"
                    android:textSize="16sp" />

                <ImageView
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:src="@drawable/ic_arrow_forward"
                    app:tint="@color/text_hint" />

            </LinearLayout>

            <!-- Wybrana lokalizacja i daty -->
            <com.google.android.material.card.MaterialCardView
                android:id="@+id/layoutSelectedLocation"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="12dp"
                android:visibility="gone"
                app:cardBackgroundColor="@color/surface_variant_dark"
                app:cardCornerRadius="12dp"
                app:cardElevation="0dp"
                app:strokeWidth="0dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:orientation="horizontal"
                    android:padding="16dp">

                    <ImageView
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:src="@drawable/ic_location_pin"
                        app:tint="@color/accent_purple" />

                    <TextView
                        android:id="@+id/textViewSelectedLocation"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="12dp"
                        android:layout_weight="1"
                        android:lineSpacingExtra="4dp"
                        android:textColor="@color/text_primary"
                        android:textSize="14sp" />

                    <ImageView
                        android:id="@+id/imageViewClearLocation"
                        android:layout_width="32dp"
                        android:layout_height="32dp"
                        android:background="?attr/selectableItemBackgroundBorderless"
                        android:clickable="true"
                        android:focusable="true"
                        android:padding="4dp"
                        android:src="@drawable/ic_clear"
                        app:tint="@color/text_hint" />

                </LinearLayout>

            </com.google.android.material.card.MaterialCardView>

            <!-- Przycisk zapisz -->
            <com.google.android.material.button.MaterialButton
                android:id="@+id/buttonSave"
                style="@style/Widget.Material3.Button"
                android:layout_width="match_parent"
                android:layout_height="56dp"
                android:layout_marginTop="32dp"
                android:text="Zapisz podróż"
                android:textAllCaps="false"
                android:textSize="16sp"
                android:background="@drawable/background_button_primary"
                app:backgroundTint="@null"
                app:cornerRadius="28dp" />

        </LinearLayout>

    </LinearLayout>

</androidx.core.widget.NestedScrollView>

