<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    
    <!-- Delikatna zewnętrzna poświata -->
    <item
        android:left="-2dp"
        android:top="-2dp"
        android:right="-2dp"
        android:bottom="-2dp">
        <shape android:shape="rectangle">
            <solid android:color="#00000000" />
            <corners android:radius="26dp" />
            <stroke
                android:width="2dp"
                android:color="#20EC4899" />
        </shape>
    </item>
    
    <!-- Główne tło - przezroczyste ciemne -->
    <item>
        <shape android:shape="rectangle">
            <solid android:color="#E01A1025" />
            <corners android:radius="24dp" />
            <stroke
                android:width="1dp"
                android:color="#35EC4899" />
        </shape>
    </item>
    
</layer-list>
