<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Base.Theme.TripLog" parent="Theme.Material3.DayNight.NoActionBar">
        <!-- Dark background -->
        <item name="android:colorBackground">@color/background_dark</item>
        <item name="colorSurface">@color/surface_dark</item>
        <item name="colorSurfaceVariant">@color/surface_variant_dark</item>
        
        <!-- Primary colors (Blue) -->
        <item name="colorPrimary">@color/accent_blue</item>
        <item name="colorOnPrimary">@color/white</item>
        
        <!-- Secondary colors (Green) -->
        <item name="colorSecondary">@color/accent_green</item>
        <item name="colorOnSecondary">@color/white</item>
        
        <!-- Text colors -->
        <item name="android:textColorPrimary">@color/text_primary</item>
        <item name="android:textColorSecondary">@color/text_secondary</item>
        <item name="android:textColorHint">@color/text_hint</item>
        
        <!-- Card and elevation -->
        <item name="cardViewStyle">@style/CardViewDark</item>
    </style>

    <style name="Theme.TripLog" parent="Base.Theme.TripLog" />
    
    <!-- Custom CardView style for dark theme -->
    <style name="CardViewDark">
        <item name="cardBackgroundColor">@color/surface_variant_dark</item>
        <item name="cardCornerRadius">12dp</item>
        <item name="cardElevation">6dp</item>
    </style>
</resources>