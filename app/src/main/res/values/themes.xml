<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Base.Theme.TripLog" parent="Theme.Material3.DayNight.NoActionBar">
        <!-- Primary colors (Pink/Purple for new theme) -->
        <item name="colorPrimary">@color/accent_pink</item>
        <item name="colorOnPrimary">@color/white</item>

        <!-- Secondary colors (Purple) -->
        <item name="colorSecondary">@color/accent_purple</item>
        <item name="colorOnSecondary">@color/white</item>

        <!-- Text colors -->
        <item name="android:textColorPrimary">@color/text_primary</item>
        <item name="android:textColorSecondary">@color/text_secondary</item>
        <item name="android:textColorHint">@color/text_hint</item>

        <!-- Card and elevation -->
        <item name="cardViewStyle">@style/CardViewDark</item>
        
        <!-- Alert Dialog style -->
        <item name="materialAlertDialogTheme">@style/DarkAlertDialog</item>
    </style>

    <style name="Theme.TripLog" parent="Base.Theme.TripLog" />

    <!-- Custom CardView style for dark theme -->
    <style name="CardViewDark">
        <item name="cardBackgroundColor">@color/surface_variant_dark</item>
        <item name="cardCornerRadius">12dp</item>
        <item name="cardElevation">6dp</item>
    </style>
    
    <!-- Custom Dark AlertDialog -->
    <style name="DarkAlertDialog" parent="ThemeOverlay.Material3.MaterialAlertDialog">
        <item name="colorSurface">@color/surface_dark</item>
        <item name="colorOnSurface">@color/text_primary</item>
        <item name="colorPrimary">@color/accent_pink</item>
        <item name="colorSecondary">@color/accent_purple</item>
        <item name="android:background">@color/surface_dark</item>
        <item name="shapeAppearanceOverlay">@style/DialogCornerRadius</item>
        <item name="materialAlertDialogTitleTextStyle">@style/DialogTitleStyle</item>
        <item name="materialAlertDialogBodyTextStyle">@style/DialogBodyStyle</item>
        <item name="buttonBarPositiveButtonStyle">@style/DialogPositiveButton</item>
        <item name="buttonBarNegativeButtonStyle">@style/DialogNegativeButton</item>
    </style>
    
    <!-- Enhanced Dark Dialog with glow effect for password change -->
    <style name="GlowingDarkDialog" parent="ThemeOverlay.Material3.MaterialAlertDialog">
        <item name="colorSurface">@color/dialog_glow_surface</item>
        <item name="colorOnSurface">@color/text_primary</item>
        <item name="colorPrimary">@color/accent_pink</item>
        <item name="colorSecondary">@color/accent_purple</item>
        <item name="android:backgroundDimAmount">0.75</item>
        <item name="shapeAppearanceOverlay">@style/DialogCornerRadiusLarge</item>
        <item name="materialAlertDialogTitleTextStyle">@style/DialogTitleStyle</item>
        <item name="materialAlertDialogBodyTextStyle">@style/DialogBodyStyle</item>
        <item name="buttonBarPositiveButtonStyle">@style/DialogPositiveButton</item>
        <item name="buttonBarNegativeButtonStyle">@style/DialogNegativeButton</item>
        <item name="android:windowBackground">@drawable/background_dialog_glowing</item>
    </style>
    
    <style name="DialogCornerRadius" parent="">
        <item name="cornerSize">20dp</item>
    </style>
    
    <style name="DialogCornerRadiusLarge" parent="">
        <item name="cornerSize">24dp</item>
    </style>
    
    <style name="DialogTitleStyle" parent="MaterialAlertDialog.Material3.Title.Text">
        <item name="android:textColor">@color/text_primary</item>
        <item name="android:textSize">20sp</item>
    </style>
    
    <style name="DialogBodyStyle" parent="MaterialAlertDialog.Material3.Body.Text">
        <item name="android:textColor">@color/text_secondary</item>
    </style>
    
    <style name="DialogPositiveButton" parent="Widget.Material3.Button.TextButton.Dialog">
        <item name="android:textColor">@color/accent_pink</item>
    </style>
    
    <style name="DialogNegativeButton" parent="Widget.Material3.Button.TextButton.Dialog">
        <item name="android:textColor">@color/text_secondary</item>
    </style>
    
    <!-- Fullscreen theme for image viewer -->
    <style name="Theme.TripLog.Fullscreen" parent="Theme.TripLog">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="android:windowFullscreen">true</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:colorBackground">@android:color/black</item>
    </style>
    
    <!-- Styl dla nagłówków dni tygodnia w kalendarzu -->
    <style name="DayOfWeekHeaderDark">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_weight">1</item>
        <item name="android:gravity">center</item>
        <item name="android:textColor">@color/text_hint</item>
        <item name="android:textSize">12sp</item>
        <item name="android:paddingTop">8dp</item>
        <item name="android:paddingBottom">8dp</item>
    </style>
    
    <!-- Styl dla okrągłego obrazka -->
    <style name="CircleImageView" parent="">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">50%</item>
    </style>
    
    <!-- Styl dla tekstu zakładek -->
    <style name="TabTextAppearance" parent="TextAppearance.Design.Tab">
        <item name="android:textSize">13sp</item>
        <item name="android:textAllCaps">false</item>
        <item name="textAllCaps">false</item>
        <item name="android:fontFamily">sans-serif-medium</item>
    </style>
    
    <!-- Styl dla MaterialDatePicker -->
    <style name="ThemeOverlay_App_DatePicker" parent="ThemeOverlay.Material3.MaterialCalendar">
        <item name="colorPrimary">@color/accent_purple</item>
        <item name="colorOnPrimary">@color/white</item>
        <item name="colorSurface">@color/surface_dark</item>
        <item name="colorOnSurface">@color/text_primary</item>
        <item name="colorOnSurfaceVariant">@color/text_secondary</item>
        <item name="colorOutline">@color/text_hint</item>
        <item name="shapeAppearanceMediumComponent">@style/DatePickerCornerRadius</item>
    </style>
    
    <style name="DatePickerCornerRadius" parent="">
        <item name="cornerSize">16dp</item>
    </style>
</resources>