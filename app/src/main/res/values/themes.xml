<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Base.Theme.TripLog" parent="Theme.Material3.DayNight.NoActionBar">
        <!-- Primary colors (Blue) -->
        <item name="colorPrimary">@color/accent_blue</item>
        <item name="colorOnPrimary">@color/white</item>

        <!-- Secondary colors (Green) -->
        <item name="colorSecondary">@color/accent_green</item>
        <item name="colorOnSecondary">@color/white</item>

        <!-- Text colors -->
        <item name="android:textColorPrimary">@color/text_primary</item>
        <item name="android:textColorSecondary">@color/text_secondary</item>
        <item name="android:textColorHint">@color/text_hint</item>

        <!-- Card and elevation -->
        <item name="cardViewStyle">@style/CardViewDark</item>
    </style>

    <style name="Theme.TripLog" parent="Base.Theme.TripLog" />

    <!-- Custom CardView style for dark theme -->
    <style name="CardViewDark">
        <item name="cardBackgroundColor">@color/surface_variant_dark</item>
        <item name="cardCornerRadius">12dp</item>
        <item name="cardElevation">6dp</item>
    </style>
    
    <!-- Fullscreen theme for image viewer -->
    <style name="Theme.TripLog.Fullscreen" parent="Theme.TripLog">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="android:windowFullscreen">true</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:colorBackground">@android:color/black</item>
    </style>
    
    <!-- Styl dla nagłówków dni tygodnia w kalendarzu -->
    <style name="DayOfWeekHeaderDark">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_weight">1</item>
        <item name="android:gravity">center</item>
        <item name="android:textColor">@color/text_hint</item>
        <item name="android:textSize">12sp</item>
        <item name="android:paddingTop">8dp</item>
        <item name="android:paddingBottom">8dp</item>
    </style>
    
    <!-- Styl dla okrągłego obrazka -->
    <style name="CircleImageView" parent="">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">50%</item>
    </style>
    
    <!-- Styl dla tekstu zakładek -->
    <style name="TabTextAppearance" parent="TextAppearance.Design.Tab">
        <item name="android:textSize">13sp</item>
        <item name="android:textAllCaps">false</item>
        <item name="textAllCaps">false</item>
        <item name="android:fontFamily">sans-serif-medium</item>
    </style>
</resources>