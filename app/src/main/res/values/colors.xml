<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!-- Base colors -->
    <color name="black">#FF000000</color>
    <color name="white">#FFFFFFFF</color>
    
    <!-- Modern dark theme colors - Purple/Pink gradient style -->
    <color name="background_dark">#FF0D0D12</color>
    <color name="background_gradient_start">#FF1A1025</color>
    <color name="background_gradient_end">#FF0D0D12</color>
    <color name="surface_dark">#CC1E1428</color>
    <color name="surface_variant_dark">#B32A1E38</color>
    <color name="surface_elevated">#992A2035</color>
    
    <!-- Accent colors - Pink/Purple -->
    <color name="accent_pink">#FFEC4899</color>
    <color name="accent_pink_light">#FFF472B6</color>
    <color name="accent_purple">#FF8B5CF6</color>
    <color name="accent_purple_dark">#FF6D28D9</color>
    
    <!-- Legacy green (for icons/indicators only) -->
    <color name="accent_green">#FF4CAF50</color>
    <color name="accent_green_dark">#FF2E7D32</color>
    <color name="accent_green_light">#FF81C784</color>
    
    <color name="accent_blue">#FF2196F3</color>
    <color name="accent_blue_dark">#FF1565C0</color>
    <color name="accent_blue_light">#FF64B5F6</color>
    
    <!-- Text colors - Android Material Design standards -->
    <!-- Primary text: 87% white - for headings, important content -->
    <color name="text_primary">#DEFFFFFF</color>
    <!-- Secondary text: 60% white - for body text, descriptions -->
    <color name="text_secondary">#99FFFFFF</color>
    <!-- Hint/Placeholder text: 38% white - for placeholders, disabled -->
    <color name="text_hint">#61FFFFFF</color>
    <!-- Disabled text: 30% white -->
    <color name="text_disabled">#4DFFFFFF</color>
    <!-- Label text: 70% white - for form labels, captions -->
    <color name="text_label">#B3FFFFFF</color>

    <!-- Card backgrounds with transparency -->
    <color name="card_background">#801E1428</color>
    <color name="card_background_elevated">#992A1E38</color>
    
    <!-- Primary and secondary for Material Design -->
    <color name="primary">@color/accent_purple</color>
    <color name="primary_dark">@color/accent_purple_dark</color>
    <color name="primary_light">@color/accent_pink_light</color>
    
    <color name="secondary">@color/accent_pink</color>
    <color name="secondary_dark">@color/accent_purple_dark</color>
    <color name="secondary_light">@color/accent_pink_light</color>

    <!-- Divider -->
    <color name="divider_dark">#40FFFFFF</color>
    
    <!-- Danger -->
    <color name="danger">#FFEF4444</color>
    <color name="danger_dark">#FFDC2626</color>
    <color name="danger_subtle">#33EF4444</color>

</resources>